<h1>Listing posts</h1>

<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Published</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @posts.each do |post| %>
  <tr>
    <td>
      <a href="#" data-xeditable="true" data-pk="<%= post.id %>" data-model="post" data-name="title" data-url="<%= post_url(post) %>" data-title="Post Title"><%= post.title %></a>
    </td>
    <td><a href="#" data-xeditable="true" data-pk="<%= post.id %>" data-model="post" data-name="body" data-url="<%= post_url(post) %>" data-title="Post Body"><%= post.body %></a>
    </td>
    <td><a href="#" data-xeditable="true" data-pk="<%= post.id %>" data-model="post" data-name="published" data-url="<%= post_url(post) %>" data-title="Published? True/False"><%= post.published %></a>
    </td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br>
<%= link_to 'New Post', new_post_path %>
